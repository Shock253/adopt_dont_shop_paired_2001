<%= form_tag "/shelters/#{@shelter.id}/reviews/#{@review.id}", method: :patch do %>
<p><%= label_tag :title, "Title:" %> <%= text_field_tag(:title, @review.title) %></p>
<p><%= label_tag :rating, "Rating:" %> <%= text_field_tag(:rating, "#{@review.rating}/5") %></p>
<p><%= label_tag :content, "Content:"%> <%= text_field_tag(:content, @review.content) %></p>
<p><%= label_tag :image, "Image:" %> <%= text_field_tag(:image, @review.image) %></p>
<%= submit_tag 'Update Shelter Review' %>
<% end %>
