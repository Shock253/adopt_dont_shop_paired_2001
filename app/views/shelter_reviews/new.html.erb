<%= form_tag "/shelters/#{@shelter.id}/reviews", method: :post do %>
  <p><%= label_tag :title, "Title:" %> <%= text_field_tag(:title) %></p>
  <p><%= label_tag :rating, "Rating:" %> <%= text_field_tag(:rating) %></p>
  <p><%= label_tag :content, "Content:"%> <%= text_field_tag(:content) %></p>
  <p><%= label_tag :image, "Image:" %> <%= text_field_tag(:image) %></p>
  <%= submit_tag 'Post Review' %>
<% end %>
